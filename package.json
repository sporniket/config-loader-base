{
    "name": "config-loader-base-by-sporniket",
    "version": "0.0.1",
    "description": "A simple method template to load a set of configuration values identified by a named key",
    "main": "dist-cjs/config-loader-base.js",
    "module": "src/config-loader-base.js",
    "exports": {
        ".": {
            "import": "./src/config-loader-base.js",
            "require": "./dist/cjs/config-loader-base.js"
        }
    },
    "scripts": {
        "format-package-json": "prettier -w package.json",
        "format-src": "eslint --fix src/*.js",
        "format-src-tests": "eslint --fix src-tests/*.?js",
        "format": "npm run format-package-json && npm run format-src && npm run format-src-tests",
        "build-cjs": "babel --plugins @babel/plugin-transform-modules-commonjs src --out-dir dist-cjs",
        "rebuild-cjs":"rm -f dist-cjs/*.js && npm run build-cjs",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=.jest.config.cjs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sporniket/config-loader-base.git"
    },
    "keywords": [
        "configuration"
    ],
    "author": "David SPORN",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/sporniket/config-loader-base/issues"
    },
    "homepage": "https://github.com/sporniket/config-loader-base#readme",
    "devDependencies": {
        "@babel/cli": "^7.26.4",
        "@babel/core": "^7.26.10",
        "@babel/preset-env": "^7.26.9",
        "babel": "^6.23.0",
        "eslint": "^8.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.3"
    }
}
